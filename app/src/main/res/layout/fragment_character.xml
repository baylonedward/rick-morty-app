<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/containerView"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/dark_slate_gray"
  android:padding="16dp"
  tools:context=".main.ui.character.CharacterFragment">

  <ImageView
    android:id="@+id/characterImageView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginEnd="8dp"
    android:src="@drawable/ic_launcher_foreground"
    app:layout_constraintBottom_toBottomOf="@+id/locationTextView"
    app:layout_constraintEnd_toStartOf="@+id/guideline2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/nameTextView" />

  <TextView
    android:id="@+id/originLabelTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:text="@string/label_origin"
    android:textColor="@color/light_blue"
    android:textSize="12sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/specieGenderTextView"
    app:layout_constraintTop_toBottomOf="@+id/specieGenderTextView" />

  <TextView
    android:id="@+id/originTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    app:layout_constraintEnd_toEndOf="@+id/originLabelTextView"
    app:layout_constraintStart_toStartOf="@+id/originLabelTextView"
    app:layout_constraintTop_toBottomOf="@+id/originLabelTextView"
    tools:text="Earth (C-137)" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.44" />

  <TextView
    android:id="@+id/locationLabelTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:text="@string/label_location"
    android:textColor="@color/light_blue"
    android:textSize="12sp"
    app:layout_constraintEnd_toEndOf="@+id/originTextView"
    app:layout_constraintStart_toStartOf="@+id/originTextView"
    app:layout_constraintTop_toBottomOf="@+id/originTextView" />

  <TextView
    android:id="@+id/locationTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    app:layout_constraintEnd_toEndOf="@+id/locationLabelTextView"
    app:layout_constraintStart_toStartOf="@+id/locationLabelTextView"
    app:layout_constraintTop_toBottomOf="@+id/locationLabelTextView"
    tools:text="Earth (Replacement Dimension)" />

  <TextView
    android:id="@+id/specieGenderTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:textColor="@color/white"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/statusImageView"
    app:layout_constraintTop_toBottomOf="@+id/nameTextView"
    tools:text="Human - Male" />

  <TextView
    android:id="@+id/nameTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:textAlignment="viewStart"
    android:textColor="@color/colorAccent"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/statusImageView"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Rick Sanchez" />

  <TextView
    android:id="@+id/textView10"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:fontFamily="sans-serif-condensed-light"
    android:text="@string/label_episode"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/characterImageView"
    app:layout_constraintTop_toBottomOf="@+id/characterImageView" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/episodeListView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView10"
    tools:listitem="@layout/episode_list_item_layout" />

  <ImageView
    android:id="@+id/statusImageView"
    android:layout_width="16dp"
    android:layout_height="0dp"
    android:layout_marginStart="8dp"
    android:src="@drawable/ic_dot_green"
    app:layout_constraintBottom_toBottomOf="@+id/nameTextView"
    app:layout_constraintStart_toStartOf="@+id/guideline2"
    app:layout_constraintTop_toTopOf="@+id/nameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>