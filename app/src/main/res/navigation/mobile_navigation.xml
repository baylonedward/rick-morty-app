<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/mobile_navigation"
  app:startDestination="@+id/navigation_character">

  <fragment
    android:id="@+id/navigation_character"
    android:name="com.kikimore.rickandmortyapp.main.ui.character.CharacterListFragment"
    android:label="@string/title_character"
    tools:layout="@layout/fragment_characters" />

  <fragment
    android:id="@+id/navigation_dashboard"
    android:name="com.kikimore.rickandmortyapp.main.ui.dashboard.DashboardFragment"
    android:label="@string/title_dashboard"
    tools:layout="@layout/fragment_dashboard" />

  <fragment
    android:id="@+id/navigation_notifications"
    android:name="com.kikimore.rickandmortyapp.main.ui.notifications.NotificationsFragment"
    android:label="@string/title_notifications"
    tools:layout="@layout/fragment_notifications" />
</navigation>